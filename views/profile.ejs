<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <%- include('common/links') %>
</head>
<body>
    <%- include('common/nav', { activePage: 'profile' }) %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-3">Profile</h3>
                        <img src="<%= profileUser.profilepic %>" alt="Profile Picture" class="rounded-circle mb-3 avatar-lg">
                        <h4 class="mb-2"><%= profileUser.username %></h4>

                        <% if (profileUser.bio) { %>
                            <p class="text-muted small mb-2"><%= profileUser.bio %></p>
                        <% } else { %>
                            <p class="text-muted small mb-2">No bio provided.</p>
                        <% } %>

                        <% if (locals.user && locals.user.id === String(profileUser._id)) { %>
                            <h5 class="mt-4">Edit Profile</h5>
                            <form action="/user/profile/<%= profileUser._id %>/update" method="POST" enctype="multipart/form-data" class="mt-3">
                                <div class="row g-2 justify-content-center">
                                    <div class="col-12">
                                        <label class="form-label small mb-1">Update profile picture (optional)</label>
                                        <input type="file" name="profilepic" id="profilepic-input" accept="image/*" class="form-control form-control-sm">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label small mb-1">Bio</label>
                                        <textarea name="bio" class="form-control form-control-sm" rows="2" placeholder="Write a short bio (leave blank to keep current)"><%= profileUser.bio %></textarea>
                                    </div>
                                    <div class="col-12 d-flex justify-content-center">
                                        <button class="btn btn-primary btn-sm" type="submit">Save changes</button>
                                    </div>
                                </div>
                            </form>

                            <script>
                                
                                (function(){
                                    const input = document.getElementById('profilepic-input');
                                    const avatar = document.querySelector('img[alt="Profile Picture"]');
                                    if (!input || !avatar) return;
                                    input.addEventListener('change', (e) => {
                                        const f = e.target.files && e.target.files[0];
                                        if (!f || !f.type.startsWith('image/')) return;
                                        const reader = new FileReader();
                                        reader.onload = () => avatar.src = reader.result;
                                        reader.readAsDataURL(f);
                                    });
                                })();
                            </script>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('common/scripts') %>
</body>
</html>