<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <%- include('common/links') %>
    
</head>
<body>
    <%- include('common/nav') %>

    <div class="container mt-4">
        <div class="blog-card shadow-sm">
            <h1 class="mb-2 ms-2 mt-2"><%= blog.title %></h1>
            <% if (blog.imageurl) { %>
                <div class="blog-image-wrapper mb-3">
                    <img src="<%= blog.imageurl %>" class="blog-image" alt="Blog Image">
                </div>
            <% } %>

            <div class="blog-content">
                <div class="post-body">
                    <% if (typeof safeHtml !== 'undefined') { %>
                        <%- safeHtml %>
                    <% } else { %>
                        <pre><%= blog.content || '' %></pre>
                    <% } %>
                </div>
            </div>



            <div class="author-row">
                <a href="/user/profile/<%= blog.createdby.id %>"><img src="<%= blog.createdby.profilepic %>" alt="Profile Picture" class="rounded-circle profile medium"></a>
                <div>
                    <div class="author-name"><%= blog.createdby.username %></div>
                    <div class="text-muted small">Published on <%= new Date(blog.createdAt).toLocaleDateString() %></div>
                </div>
            </div>
        </div>

        <div class="comments-container">
            <h3 class="mb-3">Comments (<%= comments.length %>)</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Add a comment:</label>
                        <textarea class="form-control" id="comment" name="content" rows="3" required placeholder="Type your Comments here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post</button>
                </form>
            <% } else { %>
                <p>Please <a href="/user/signin">sign in</a> to post a comment.</p>
            <% } %>

            <% if (comments.length === 0) { %>
                <p class="text-muted">No comments yet.</p>
            <% } else { %>
                <div class="mt-3 mb-3">
                    <% comments.forEach(comment => { %>
                        <div class="comment-item">
                            <div class="d-flex align-items-start gap-3">
                                <a href="/user/profile/<%= comment.createdby.id %>"><img src="<%= comment.createdby.profilepic %>" alt="Profile Picture" class="rounded-circle profile small"></a>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-0 me-2"><%= comment.createdby.username %></h6>
                                        <small class="text-muted comment-meta ms-auto"><%= new Date(comment.createdAt).toLocaleString() %></small>
                                    </div>
                                    <div class="comment-body mt-2">
                                        <p><%= comment.content %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
        <div class="spacer-md"></div>
    </div>

    <%- include('common/scripts') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/github.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
        <script src="https://cdn.jsdelivr.net/npm/markdown-it@13.0.1/dist/markdown-it.min.js"></script>
        <script>
            (function(){
                const post = document.querySelector('.post-body');
                if (!post) return;
                const text = post.textContent || '';
                const hasMdLink = /\[[^\]]+\]\([^\)]+\)/.test(text);
                const hasInlineCode = /`[^`]+`/.test(text);
                    if ((hasMdLink || hasInlineCode) && window.markdownit){
                    try{
                        const md = window.markdownit({html:true, linkify:true, typographer:true});
                        post.innerHTML = md.render(text);
                        if (window.hljs && hljs.highlightElement) {
                            document.querySelectorAll('pre code').forEach((b) => hljs.highlightElement(b));
                        }
                    }catch(e){
                        console.error('md fallback failed', e);
                    }
                }

                    document.querySelectorAll('.post-body > pre').forEach(pre => {
                        const txt = pre.textContent || '';
                        const lines = txt.split(/\r?\n/).filter(l => l.trim() !== '');
                        if (lines.length <= 2 && !/[;{}()<>]/.test(txt)) pre.classList.add('not-code');
                    });
            })();
        </script>
</body>
</html>
