<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <%- include('common/links') %>
    <style>
        .blog-card {
            max-width: 960px;
            margin: 0 auto;
            border: none;
        }

        .blog-image-wrapper {
            width: 100%;
            border-radius: 8px;
            overflow: hidden;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .blog-image-wrapper img.blog-image {
            width: auto;
            max-width: 100%;
            padding: 0.5rem;
            height: auto;
            max-height: 520px;
            display: block;
            object-fit: contain;
            border-radius: 15px;
            background: transparent;
        }

        .blog-content {
            background: #fdfdfd;
            border: 1px solid rgba(0,0,0,0.05);
            border-radius: 8px;
            padding: 0 1.8rem;
            margin-top: 1rem;
            margin-bottom: 1rem;
            font-size: 1.05rem;
            line-height: 1;
            color: #2d2d2d;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            white-space: pre-wrap;
            word-break: break-word;
        }

        .blog-content:hover {
            background: #fcfcfc;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

        .author-row {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
        }

        .author-name {
            font-weight: 600;
        }

        .comments-container {
            max-width: 960px;
            margin: 1.5rem auto 3rem;
        }

        .comment-item {
            padding: 0.75rem;
            border-radius: 8px;
            border: 1px solid rgba(0,0,0,0.05);
            background: #ffffff;
            margin-bottom: 0.75rem;
        }

        .comment-meta {
            font-size: 0.9rem;
        }

        .comment-body {
            background: #f8f9fa;
            padding: 0.6rem 0.75rem;
            border-radius: 6px;
            max-height: 220px;
            overflow: auto;
        }

        .comment-body p {
            margin: 0;
            white-space: pre-wrap;
            word-break: break-word;
            font-size: 0.95rem;
            line-height: 1.45;
            color: #212529;
        }

        .profile {
            transition: transform 0.18s ease, box-shadow 0.18s ease;
            will-change: transform;
            display: inline-block;
        }

        .profile.small {
            width: 34px;
            height: 34px;
        }

        .profile.medium {
            width: 44px;
            height: 44px;
        }

        .profile:hover,
        .profile:focus {
            transform: scale(1.18);
            z-index: 5;
            box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        }

        @media (max-width: 575px) {
            .blog-image-wrapper img.blog-image {
                max-height: 260px; /* mobile limit */
            }

            .blog-content {
                padding: 1rem;
                font-size: 0.98rem;
                line-height: 1.6;
            }
        }
    </style>
</head>
<body>
    <%- include('common/nav') %>

    <div class="container mt-4">
        <div class="blog-card shadow-sm">
            <h1 class="mb-2 ms-2 mt-2"><%= blog.title %></h1>
            <% if (blog.imageurl) { %>
                <div class="blog-image-wrapper mb-3">
                    <img src="<%= blog.imageurl %>" class="blog-image" alt="Blog Image">
                </div>
            <% } %>

            <div class="blog-content">
                <p><%- blog.content %></p>
            </div>



            <div class="author-row">
                <a href="/user/profile/<%= blog.createdby.id %>"><img src="<%= blog.createdby.profilepic %>" alt="Profile Picture" class="rounded-circle profile medium"></a>
                <div>
                    <div class="author-name"><%= blog.createdby.username %></div>
                    <div class="text-muted small">Published on <%= new Date(blog.createdAt).toLocaleDateString() %></div>
                </div>
            </div>
        </div>

        <div class="comments-container">
            <h3 class="mb-3">Comments (<%= comments.length %>)</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Add a comment:</label>
                        <textarea class="form-control" id="comment" name="content" rows="3" required placeholder="Type your Comments here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post</button>
                </form>
            <% } else { %>
                <p>Please <a href="/user/signin">sign in</a> to post a comment.</p>
            <% } %>

            <% if (comments.length === 0) { %>
                <p class="text-muted">No comments yet.</p>
            <% } else { %>
                <div class="mt-3 mb-3">
                    <% comments.forEach(comment => { %>
                        <div class="comment-item">
                            <div class="d-flex align-items-start gap-3">
                                <a href="/user/profile/<%= comment.createdby.id %>"><img src="<%= comment.createdby.profilepic %>" alt="Profile Picture" class="rounded-circle profile small"></a>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-0 me-2"><%= comment.createdby.username %></h6>
                                        <small class="text-muted comment-meta ms-auto"><%= new Date(comment.createdAt).toLocaleString() %></small>
                                    </div>
                                    <div class="comment-body mt-2">
                                        <p><%= comment.content %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
        <div class="spacer-md"></div>
    </div>

    <%- include('common/scripts') %>
</body>
</html>
