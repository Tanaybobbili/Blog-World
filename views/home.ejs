<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%- include('common/links') %>
</head>
<body>    
    <%- include('common/nav', { activePage: 'home' }) %>
    <div class="container mt-3">
        <h1 class="mb-4">Latest Blogs</h1>
        <% if (blogs.length === 0) { %>
            <p>No blogs available.</p>
        <% } else { %>
            <div class="row g-4">
                <style>
                    .blog-card-img {
                        height: 160px;
                        object-fit: auto;
                        width: 100%;
                    }

                    @media (min-width: 992px) {
                        .blog-card-img { height: 180px; }
                    }

                    @media (min-width: 1200px) {
                        .blog-card-img { height: 150px; }
                    }
                </style>
                <% blogs.forEach(blog => { %>
                    <div class="col-12 col-md-6 col-lg-3 d-flex">
                        <div class="card w-100 h-100">
                            <% if (blog.imageurl) { %>
                                <img src="<%= blog.imageurl %>" class="card-img-top blog-card-img" alt="Blog Image">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text text-truncate" style="max-height: 4.5rem;"><%= blog.content %></p>
                                <div class="mt-auto">
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary">Take a look</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <%- include('common/scripts') %>
</body>
</html>